<% include('../layouts/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f9fc;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }
        h1 {
            color: #333;
            margin-bottom: 20px;
            font-size: 2em;
        }
        .profile-image {
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
            border: 4px solid #007BFF;
            max-width: 150px; /* Control max width */
            max-height: 150px; /* Control max height */
            width: auto; /* Maintain aspect ratio */
            height: auto; /* Maintain aspect ratio */
        }
        table {
            width: 100%;
            border-spacing: 10px;
            margin-bottom: 20px;
        }
        td {
            padding: 10px;
            vertical-align: middle;
        }
        .label {
            font-weight: bold;
            color: #555;
        }
        .value {
            font-weight: 600;
            color: #333;
        }
        a {
            text-decoration: none;
            color: #007BFF;
            font-size: 1.1em;
            margin: 0 10px;
            transition: color 0.3s;
        }
        a:hover {
            color: #0056b3;
        }
        .actions {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Welcome, <%= user.name %></h1>
    
    <img src="userimages/<%= user.image %>" class="profile-image" alt="<%= user.image %>">

    <table>
        <tr>
            <td class="label">Name</td>
            <td class="value"><%= user.name %></td>
        </tr>
        <tr>
            <td class="label">Email</td>
            <td class="value"><%= user.email %></td>
        </tr>
        <tr>
            <td class="label">Mobile</td>
            <td class="value"><%= user.mobile %></td>
        </tr>
    </table>

    <div class="actions">
        <a href="/edit?id=<%= user._id %>">Edit Profile</a>
        <a href="logout">Logout</a>
    </div>
</div>

<% include('../layouts/footer.ejs') %>

</body>
</html>

<% include("../layouts/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            color: #333;
        }
        .container {
            width: 70%;
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }
        h1 {
            color: #333;
            text-align: center;
            font-size: 2em;
            margin-bottom: 20px;
            border-bottom: 2px solid #007BFF;
            padding-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        td {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }
        td img {
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .actions {
            text-align: center;
            margin: 20px 0;
        }
        .actions a {
            text-decoration: none;
            color: #fff;
            background: linear-gradient(135deg, #007BFF, #00BFFF);
            padding: 10px 20px;
            border-radius: 5px;
            margin: 0 10px;
            font-size: 16px;
            transition: background 0.3s, transform 0.2s;
        }
        .actions a:hover {
            background: linear-gradient(135deg, #0056b3, #1e90ff);
            transform: scale(1.05);
        }
        .actions a.logout {
            background: linear-gradient(135deg, #dc3545, #ff6f61);
        }
        .actions a.logout:hover {
            background: linear-gradient(135deg, #c82333, #e74c3c);
        }
        .label {
            font-weight: bold;
            color: #555;
        }
        .value {
            color: #333;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Welcome, <%= admin.name %></h1>

    <div class="actions">
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/logout" class="logout">Logout</a>
    </div>

    <table>
        <tr>
            <td colspan="2" style="text-align: center;">
                <img src="/userImages/<%= admin.image %>" width="150px" height="150px" alt="<%= admin.image %>">
            </td>
        </tr>
        <tr>
            <td class="label">Email</td>
            <td class="value"><%= admin.email %></td>
        </tr>
        <tr>
            <td class="label">Mobile Number</td>
            <td class="value"><%= admin.mobile %></td>
        </tr>
    </table>
</div>

<% include("../layouts/footer.ejs") %>

</body>
</html>



